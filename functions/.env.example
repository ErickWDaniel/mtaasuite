# Firebase Functions Environment Variables Template
# Copy this file to .env and fill in your actual values

# Beem SMS (Tanzania) - Primary SMS Provider
BEEM_API_KEY=your_beem_api_key_here
BEEM_SECRET_KEY=your_beem_secret_key_here
BEEM_SENDER_NAME=MtaaSuite

# Tigo SMS (Tanzania) - Secondary SMS Provider
TIGO_API_TOKEN=your_tigo_api_token_here
TIGO_SENDER_ID=MtaaSuite

# Twilio SMS (International Fallback) - Tertiary SMS Provider
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Firebase Configuration (if needed)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Development/Production Environment
NODE_ENV=development